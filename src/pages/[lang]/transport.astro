---
import BaseLayout from "../../layouts/BaseLayout.astro";
import TransportInfo from "../../components/TransportInfo.astro";
import {
    languages,
    defaultLang,
    useTranslations,
    getLocalizedText,
} from "../../i18n/utils";
import type { Language, TransportData } from "../../types";
import { Car, Bus, Info } from "lucide-astro";

import transportData from "../../../data/transport.json";

export function getStaticPaths() {
    return languages
        .filter((l) => l.code !== defaultLang)
        .map((l) => ({ params: { lang: l.code } }));
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const { taxis, publicTransport, rentalCars, tips } =
    transportData as TransportData;
---

<BaseLayout title={t("transport", "title")}>
    <div class="bg-gray-50 min-h-screen">
        <div class="bg-white border-b">
            <div class="container py-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    {t("transport", "title")}
                </h1>
                <p class="text-gray-600">
                    Everything you need to know about getting around Pakchong
                    and Khao Yai
                </p>
            </div>
        </div>

        <div class="container py-8">
            <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 mb-8">
                <div class="flex gap-4">
                    <div class="flex-shrink-0">
                        <Info class="w-6 h-6 text-blue-600" />
                    </div>
                    <div>
                        <h3 class="font-semibold text-blue-900 mb-2">
                            {t("transport", "tips")}
                        </h3>
                        <p class="text-blue-800 text-sm leading-relaxed">
                            {getLocalizedText(tips, lang)}
                        </p>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <section>
                    <div class="flex items-center gap-3 mb-6">
                        <div
                            class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600"
                        >
                            <Car class="w-5 h-5" />
                        </div>
                        <h2 class="text-xl font-bold text-gray-900">
                            {t("transport", "taxis")}
                        </h2>
                    </div>

                    <div class="space-y-4">
                        {
                            taxis.map((taxi) => (
                                <TransportInfo
                                    type="taxi"
                                    data={taxi}
                                    lang={lang}
                                />
                            ))
                        }
                    </div>
                </section>

                <section>
                    <div class="flex items-center gap-3 mb-6">
                        <div
                            class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600"
                        >
                            <Car class="w-5 h-5" />
                        </div>
                        <h2 class="text-xl font-bold text-gray-900">
                            {t("transport", "carRental")}
                        </h2>
                    </div>

                    <div class="space-y-4">
                        {
                            rentalCars.map((rental) => (
                                <TransportInfo
                                    type="rental"
                                    data={rental}
                                    lang={lang}
                                />
                            ))
                        }
                    </div>
                </section>
            </div>

            <section class="mt-12">
                <div class="flex items-center gap-3 mb-6">
                    <div
                        class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center text-primary-600"
                    >
                        <Bus class="w-5 h-5" />
                    </div>
                    <h2 class="text-xl font-bold text-gray-900">
                        {t("transport", "publicTransport")}
                    </h2>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
                >
                    {
                        publicTransport.map((transport) => (
                            <TransportInfo
                                type="public"
                                data={transport}
                                lang={lang}
                            />
                        ))
                    }
                </div>
            </section>
        </div>
    </div>
</BaseLayout>
