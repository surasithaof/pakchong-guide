---
import { MapPin, ExternalLink } from 'lucide-astro';
import { useTranslations } from '../i18n/utils';
import type { Language } from '../types';

interface Props {
  url: string;
  lang: Language;
  class?: string;
}

const { url, lang, class: className } = Astro.props;
const t = useTranslations(lang);
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium',
    className
  ]}
>
  <MapPin class="w-4 h-4" />
  <span>{t('places', 'viewOnMap')}</span>
  <ExternalLink class="w-3.5 h-3.5" />
</a>
