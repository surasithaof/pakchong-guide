---
import { Heart, Github, MapPin } from 'lucide-astro';
import { useTranslations } from '../i18n/utils';
import type { Language } from '../types';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer class="bg-gray-800 text-gray-300">
  <div class="container py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <a href="/" class="flex items-center gap-2 text-white font-semibold text-lg mb-4">
          <MapPin class="w-6 h-6 text-primary-400" />
          <span>Pakchong Guide</span>
        </a>
        <p class="text-sm text-gray-400">
          {t('about', 'description')}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t('nav', 'places')}</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/places" class="hover:text-white transition-colors">
              {t('places', 'title')}
            </a>
          </li>
          <li>
            <a href="/itineraries" class="hover:text-white transition-colors">
              {t('itineraries', 'title')}
            </a>
          </li>
          <li>
            <a href="/transport" class="hover:text-white transition-colors">
              {t('transport', 'title')}
            </a>
          </li>
        </ul>
      </div>

      <!-- Contribute -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t('about', 'contribute')}</h3>
        <a
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm hover:text-white transition-colors"
        >
          <Github class="w-5 h-5" />
          <span>{t('footer', 'openSource')}</span>
        </a>
      </div>
    </div>

    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-sm">
      <p class="flex items-center justify-center gap-1">
        {t('footer', 'madeWith')}
        <Heart class="w-4 h-4 text-red-400 fill-red-400" />
      </p>
      <p class="text-gray-500 mt-2">
        &copy; {new Date().getFullYear()} Pakchong Guide. MIT License.
      </p>
    </div>
  </div>
</footer>
